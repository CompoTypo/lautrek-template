# =============================================================================
# Lautrek Template Environment Configuration
# Copy to .env and fill in values
# =============================================================================

# Application
APP_NAME=productname
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_BASE_URL=http://localhost:8080
APP_PORT=8080
LOG_LEVEL=INFO

# API Key Prefix (customize per product)
API_KEY_PREFIX=lt_

# Database
DB_PATH=/data/productname.db

# Litestream (production only)
LITESTREAM_ENDPOINT=nyc3.digitaloceanspaces.com
LITESTREAM_BUCKET=lautrek-productname-db
LITESTREAM_PATH=replica
DB_ACCESS_KEY=
DB_SECRET_KEY=

# SMTP
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Admin
ADMIN_EMAIL=

# CORS
CORS_ORIGINS=http://localhost:5173

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# MCP Client
MCP_BACKEND_URL=https://productname.lautrek.com
MCP_API_KEY=
MCP_TIMEOUT=60.0
